<UserControl x:Class="SimpleMES.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleMES.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <UserControl.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#0BA3B2"/>
        <SolidColorBrush x:Key="CardBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="GhostBrush" Color="#20FFFFFF"/>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12 8"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10 6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10 6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#444"></Setter>
        </Style>
    </UserControl.Resources>
    <Grid >
        <!-- 背景大图 -->
        <Image Source="pack://application:,,,/Views/云海.jpg"
               Stretch="UniformToFill"
               SnapsToDevicePixels="True"/>
        <!-- 半透明遮罩，便于前景对比 -->
        <Rectangle Fill="#50000000"/>

        <materialDesign:Transitioner x:Name="FormTransitioner"
                                     SelectedIndex="{Binding SlideIndex}"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Width="900"
                                     Height="400">
            <!--登录页-->
            <materialDesign:TransitionerSlide>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                            Background="{StaticResource CardBrush}"
                            CornerRadius="14"
                            Padding="20"
                            Margin="12">
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Width="320"
                                    Margin="18">
                            <DockPanel LastChildFill="True">
                                <TextBlock Text="邮箱"
                                           Width="50"
                                           VerticalAlignment="Center"/>
                                <TextBox Text="{Binding Email}"/>
                            </DockPanel>
                            <DockPanel LastChildFill="True">
                                <TextBlock Text="密码"
                                           Width="50"
                                           VerticalAlignment="Center"/>
                                <PasswordBox PasswordChar="●"/>
                            </DockPanel>
                            <Button Content="登 录"
                                    Command="{Binding LoginCommand}" 
                                    Width="160" 
                                    Height="40" 
                                    FontSize="15" 
                                    Margin="0 10 0 0"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1"
                            Background="{StaticResource GhostBrush}"
                            CornerRadius="14"
                            Padding="40"
                            Margin="12">
                        <Border.Effect>
                            <DropShadowEffect Color="#66000000"
                                              BlurRadius="25"
                                              ShadowDepth="0"
                                              Opacity="0.7"/>
                        </Border.Effect>
                        <StackPanel VerticalAlignment="Center"
                                    Width="360"
                                    Margin="16">
                            <Button Content="去注册" Width="160" Height="36" Margin="0,12,0,0"
                                    Command="{Binding GoRegisterCommand}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </materialDesign:TransitionerSlide>
            <!--注册页-->
            <materialDesign:TransitionerSlide>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="{StaticResource GhostBrush}"
                            CornerRadius="14" Padding="40" Margin="12">
                        <Border.Effect>
                            <DropShadowEffect Color="#66000000" 
                                              BlurRadius="25" 
                                              ShadowDepth="0" 
                                              Opacity="0.7" />
                        </Border.Effect>
                        <StackPanel HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    Width="320" 
                                    Margin="18">
                            <Button Content="去登录"
                                    Width="160"
                                    Height="36"
                                    Margin="0,12,0,0"
                                    Command="{Binding GoLoginCommand}" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1"
                            Background="{StaticResource CardBrush}"
                            CornerRadius="14"
                            Padding="32"
                            Margin="12">
                        <StackPanel VerticalAlignment="Center"
                                    Width="360"
                                    Margin="16">
                            <TextBlock Text="注册"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0 0 0 8"/>
                            <DockPanel LastChildFill="True">
                                <TextBlock Text="用户名"
                                           Width="50"
                                           VerticalAlignment="Center"/>
                                <TextBox Text="{Binding UserName}"/>
                            </DockPanel>
                            <DockPanel LastChildFill="True">
                                <TextBlock Text="邮箱"
                                           Width="50"
                                           VerticalAlignment="Center"/>
                                <TextBox Text="{Binding Email}"/>
                            </DockPanel>
                            <DockPanel LastChildFill="True">
                                <TextBlock Text="密码"
                                           Width="50"
                                           VerticalAlignment="Center"/>
                                <PasswordBox PasswordChar="●"/>
                            </DockPanel>
                            <Button Content="注 册"
                                    Command="{Binding RegisterCommand}"
                                    Width="160"
                                    Height="40"
                                    FontSize="15"
                                    HorizontalAlignment="Center"
                                    Margin="0 10 0 0" />
                            
                        </StackPanel>
                    </Border>
                </Grid>
            </materialDesign:TransitionerSlide>
        </materialDesign:Transitioner>
    </Grid>
</UserControl>
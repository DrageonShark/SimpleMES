<Window x:Class="SimpleMES.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleMES"
        xmlns:vm="clr-namespace:SimpleMES.ViewModels"
        xmlns:views="clr-namespace:SimpleMES.Views"
        mc:Ignorable="d"
        Title="简单MES系统" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:MonitorViewModel}">
            <views:MonitorView />
        </DataTemplate>
    </Window.Resources>
    <Grid Background="#F0F2F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="#2C3E50">
            <StackPanel Margin="10">
                <TextBlock Text="Simple MES" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,20,0,40" HorizontalAlignment="Center"/>
                <Button Content="📊 设备监控" Command="{Binding ShowMonitorCommand}" Height="40" Margin="0,5" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="20,0"/>
                <Button Content="📝 生产订单" Command="{Binding ShowOrderCommand}" Height="40" Margin="0,5" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="20,0"/>
                <Button Content="📈 数据报表" Command="{Binding ShowReportCommand}" Height="40" Margin="0,5" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="20,0"/>
            </StackPanel>
        </Border>
        <Border Grid.Column="1" Background="White" Margin="10" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{Binding PageTitle}" Foreground="Aqua" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Margin="20,20,0,20"/>
            </Grid>
        </Border>
    </Grid>
</Window>
